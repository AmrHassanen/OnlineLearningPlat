@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* Featured section */

    .footer {
        background-color: #f5f5f5; /* Set footer background color */
        color: #6c757d; /* Muted text color */
        font-size: 0.9rem; /* Slightly smaller font size */
        padding: 1rem 0; /* Add vertical padding */
    }

        .footer a {
            text-decoration: none; /* Remove underline */
            color: #6c757d; /* Ensure link color matches muted text */
        }

            .footer a:hover {
                text-decoration: underline; /* Underline on hover for accessibility */
            }


    .featured {
        height: 250px; /* Set fixed height for the featured section */
        display: flex; /* Align content with flexbox */
        justify-content: center; /* Center the content horizontally */
        align-items: center; /* Center the content vertically */
        background-color: #f5f5f5; /* Light background for contrast */
        text-align: center; /* Center the text inside the featured section */
    }

    /* Carousel images */
    .carousel-item img {
        object-fit: cover; /* Ensures the image covers the area without distortion */
        height: 600px; /* Fixed height for images */
        width: 100%; /* Full width of the container */
        max-height: 80vh; /* Make sure images do not exceed 80% of the viewport height */
    }

    /* Carousel itself */
    .carousel {
        max-width: 100%; /* Ensure the carousel is responsive and takes full width */
        margin: 0 auto; /* Center carousel horizontally */
        overflow: hidden; /* Ensure no overflow happens */
    }
</style>


<!-- Carousel Section -->
<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>

    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="/images/FirstImage.jpeg" class="d-block w-100" alt="slide 1">
        </div>
        <div class="carousel-item">
            <img src="/images/TwoImage.jpeg" class="d-block w-100" alt="slide 2">
        </div>
        <div class="carousel-item">
            <img src="/images/ThreeImge.jpeg" class="d-block w-100" alt="slide 3">
        </div>
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<!-- Welcome Section -->
<section class="featured py-5">
    <div class="d-flex justify-content-center pt-4">
        <h1>Welcome To The E_Learning!</h1>
    </div>
</section>
